@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutVacio";
}
<div class="row mt-5 justify-content-center">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-header">
            Iniciar Sesión
            </div>
            <div class="card-body">
                <form asp-controller = "Home" asp-action="Iniciar">
                    <div class="d-grid mb-2">
                    <label class="form-label" for="NombreUsuario">Nombre de Usuario</label>
                    <input class="form-control mb-3" type="text" name="NombreUsuario" value=""/>
                    </div>

                    <div class="d-grid mb-xxl-5">
                    <label class="form-label" for="Clave">Contraseña</label>
                    <input class="form-control mb-3 gap-xxl-3" type="password" name="Clave" value=""/>
                    </div>

                    <div class="d-grid mb-2">
                        <input class="btn btn-primary" type="submit" value="Ingresar"/>
                    </div>

                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Mensaje"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
