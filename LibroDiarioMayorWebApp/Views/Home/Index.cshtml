@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutVacio";
}
<div class="row mt-5 justify-content-center">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-header">
            Iniciar Sesión
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="d-grid mb-2">
                    <label class="form-label" for="correo">Correo Electronico</label>
                    <input class="form-control mb-3" type="email" name="correo" value=""/>
                    </div>

                    <div class="d-grid mb-xxl-5">
                    <label class="form-label" for="clave">Contraseña</label>
                    <input class="form-control mb-3 gap-xxl-3" type="password" name="clave" value=""/>
                    </div>

                    <div class="d-grid mb-2">
                        <input class="btn btn-primary" type="submit" value="Ingresar"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
